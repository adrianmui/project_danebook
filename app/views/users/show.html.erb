<div class="container" id="phototron-container">
  <div class="jumbotron" id="big-body">
    <%= render partial: "shared/user_phototron", locals: { profile: @profile} %>
  </div>
</div>

<br>

<div class="container" id="nav-container">
  <%= render partial: "shared/user_nav_bar", locals: { profile: @profile} %>
</div>

<div class="container" id="main-body-container" style="height: 1000px; border: 1px solid black">
  <div class="col-md-4" style="height: 1000px; border: 1px solid black; padding: 0px">

    <div class="card card-default" style="width: 100%; padding: 0px;">
      <h4 class="card-title text-xs-center" style="margin-top: 10px"> About Me</h4>
