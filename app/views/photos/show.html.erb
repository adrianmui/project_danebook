<div class="main" style="border:1px solid black">

  <div class="row">
    <h1> Photo </h1>
  </div>

  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
      <p>Title: <%= @photo.label %></p>
      <p>Date: <%= @photo.created_at %></p>
      <span>
        <%= image_tag @photo.avatar.url(:medium) %>
      </span>


      <p> 
        <%= link_to "Set as Background Image", user_photo_path(current_user, @photo), class: "btn btn-danger active"%>
      </p>
      <p>
        <%= link_to "Set as Profile Picture", 
          user_profiles_photos_path(current_user, photo_id: @photo.id),
          :method => "post", 
          class: "btn btn-danger active" %>
      </p>  
    </div>
    <div class="col-sm-3">
    </div>

  </div>
</div>