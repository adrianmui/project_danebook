<div class="photo-container">
  
    <% if profile.has_photo? %>
      <%= image_tag profile.photo.avatar.url(:thumb) %>
      <h4> <%= current_user.username %> </h4>
    <% else %>
      <%= form_for :photo, :url => user_profiles_photos_path(current_user, profile) do |photo_fields| %>
        <%= photo_fields.label :label %>
        <%= photo_fields.text_field :label %>
        <%= photo_fields.file_field :avatar %>
        <%= photo_fields.submit %>
      <% end %>
    <% end %>

 

  </div>


