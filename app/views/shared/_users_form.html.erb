<%= form_for user do |user_fields| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= fields_for profile do |fa| %>

    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this user's profile from being saved: </h2>
        <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :first_name , class: "btn btn-primary"%>
      </div>
      <div class="col-sm-6">
        <%=fa.text_field :first_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :last_name, class: "btn btn-primary" %>
      </div>
      <div class="col-sm-6">
        <%=fa.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :month , class: "btn btn-primary"%>
      </div>
      <div class="col-sm-6">
        <%=fa.text_field :month %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :day , class: "btn btn-primary"%>
      </div>
      <div class="col-sm-6">
        <%=fa.number_field :day %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :year , class: "btn btn-primary"%>
      </div>
      <div class="col-sm-6">
        <%=fa.number_field :year %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-3">
        <%=fa.label :gender, class: "btn btn-primary" %>
      </div>
      <div class="col-sm-6">
        <%= fa.select(:gender, [[' ', ' '], ['Female',"female"], ['Male',"male"]]) %>
      </div>
    </div>   
  <% end %>

  <div class="row">
    <div class="col-sm-4">
      <%= user_fields.label :username , class: "btn btn-primary"%>
    </div>
    <div class="col-sm-6">
      <%= user_fields.text_field :username %>
    </div>
   </div>
   
  <div class="row">
    <div class="col-sm-4">
      <%= user_fields.label :email, class: "btn btn-primary" %>
    </div>
    <div class="col-sm-6">
      <%= user_fields.text_field :email %>
    </div>
   </div>
   
  <div class="row">
    <div class="col-sm-4">
      <%= user_fields.label :password , class: "btn btn-primary"%>
    </div>
    <div class="col-sm-6">
      <%= user_fields.password_field :password %>
    </div>
   </div>

  <div class="row">
    <div class="col-sm-4">
      <%= user_fields.label :password_confirmation, class: "btn btn-primary" %>
    </div>
    <div class="col-sm-6">
      <%= user_fields.password_field :password_confirmation %>
    </div>  
  </div>

  <br>

  <div class="row">
    <div class="col-sm-8">
    <%= user_fields.submit "Sign Up", class: "btn btn-success", style: "width: 400px"%>
    </div>
  </div>
  
<% end %>